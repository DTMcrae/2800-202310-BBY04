<!DOCTYPE html>
<html lang="en">

<head>
    <title>myDND</title>
    <meta name="comp1800 template" content="My 1800 App">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js"
        integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
        crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="/styles/combat.css">

</head>

<body>
    <!-- Player Data -->
    <nav class="card transparent" id="playerData">
        <div class="card-body d-flex">
            <img id="playerImage" class="d-flex mt-auto mb-auto" src="/images/myD&D_Icon.png" width="55px" height="55px">
            <ul class="d-flex list-unstyled flex-column mb-0 pl-2">
                <li class="d-flex align-items-center"><h5 class="card-title mb-0" id="playerName">Cedric</h5></li>
                <li class="d-flex align-items-center"><p class="card-text mb-0">HP:</p><p class="card-text pl-1" id="playerHealth">100/100</p></li>
                <li class="d-flex align-items-center"><p class="card-text mb-0">Gold:</p><p class="card-text pl-1" id="playerGold">100</p></li>
            </ul>
            <ul class="d-flex list-unstyled ml-auto">
                <li class="d-flex align-items-center ml-5 mt-auto">
                    <span class="material-symbols-outlined">save</span>
                </li>
                <li class="d-flex align-items-center ml-5 mt-auto">
                    <span class="material-symbols-outlined">home</span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card mt-3 d-flex ml-auto mr-auto transparent" style="max-width: 100rem;">
        <div class="card-body d-flexbox justify-content-center text-center">
                <div class="card-text" id="combat-text" style="overflow: scroll; overflow-x: hidden;">
                    <% if (typeof history !=='undefined' ) { %>
                        <% if (history.length > 1 ) { %>
                            <% for(var i=0; i < history.length; i++) {%>
                                <p><%- history[i] %></p>
                            <% } %>
                        <% } %>
                    <% } %>
                    <h5 class="display-flex text-center align-items-end">Roll!</h5>
            </div>
        </div>
    </div>

<% if(typeof Dice !=='undefined') {%>
<div class="options d-flex fixed-bottom flex-column pb-5 mb-4 align-items-center">
<form id="roller" method="post">
    <button id="atkRoll" class="btn btn-secondary p-2 mb-2" style="width:25rem" type="button">Roll 1d20</button>
    <button id="dmgRoll" class="btn btn-secondary p-2 mb-2" style="width:25rem" dice="<%-Amount%>d<%-Dice%>" type="button">Roll <%- Amount %>d<%- Dice %></button>
    <button id="continue" class="btn btn-secondary p-2 mb-2 disabled" style="width:25rem" type="submit">Next</button>
</form>
</div>
<% } %>

<div class="modal fade" id="diceModal" tabindex="-1" role="dialog" aria-labelledby="diceModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="diceModalLongTitle">Dice Roller</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <canvas id="diceRolls"></canvas>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/DiceClient.js"></script>
<script>
    this.atkRoll = undefined;
    this.dmgRoll = undefined;

    const atkRoll = document.getElementById('atkRoll').addEventListener('click', () => {
        this.atkRoll = VisualizeRoll(20,1);
        console.log("Attack Roll: " + this.atkRoll);
        if (this.atkRoll < 0) return;
        document.getElementById("atkRoll").classList.add("disabled");
        updateForm();
    });

    const dmgRoll = document.getElementById('dmgRoll').addEventListener('click', () => {
        let roll = document.getElementById('dmgRoll').getAttribute("dice").split('d');
        this.dmgRoll = VisualizeRoll(roll[1], roll[0]);
        console.log("Damage Roll: " + this.dmgRoll);
        if(this.dmgRoll < 0) return;
        document.getElementById("dmgRoll").classList.add("disabled");
        updateForm();
    });

    function updateForm() {
        if (typeof this.dmgRoll == 'undefined' || typeof this.atkRoll == 'undefined') return;
        document.getElementById('roller').setAttribute("action","/combat/generatePlayerAction/" + this.atkRoll + "_" + this.dmgRoll);
        document.getElementById("continue").setAttribute("type","submit");
        document.getElementById("continue").classList.remove("disabled");
    }
</script>

<footer class="d-flex fixed-bottom">
    <button class="btn btn-secondary w-100 p-3">Party</button>
    <button class="btn btn-secondary w-100 p-3">Inventory</button>
</footer>
</body>

</html>