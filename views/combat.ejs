<!DOCTYPE html>
<html lang="en">

<head>
    <title>myDND</title>
    <meta name="comp1800 template" content="My 1800 App">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js"
        integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
        crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="/styles/combat.css">

</head>

<body>
    <!-- Player Data -->
    <nav class="card transparent" id="playerData">
        <div class="card-body d-flex">
            <img id="playerImage" class="d-flex mt-auto mb-auto" src="/images/myD&D_Icon.png" width="55px" height="55px">
            <ul class="d-flex list-unstyled flex-column mb-0 pl-2">
                <li class="d-flex align-items-center"><h5 class="card-title mb-0" id="playerName">Cedric</h5></li>
                <li class="d-flex align-items-center"><p class="card-text mb-0">HP:</p><p class="card-text pl-1" id="playerHealth">100/100</p></li>
                <li class="d-flex align-items-center"><p class="card-text mb-0">Gold:</p><p class="card-text pl-1" id="playerGold">100</p></li>
            </ul>
            <ul class="d-flex list-unstyled ml-auto">
                <li class="d-flex align-items-center ml-5 mt-auto">
                    <span class="material-symbols-outlined">save</span>
                </li>
                <li class="d-flex align-items-center ml-5 mt-auto">
                    <span class="material-symbols-outlined">home</span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card mt-3 d-flex ml-auto mr-auto transparent" id="combat-text" style="max-width: 100rem;">
        <div class="card-body d-flexbox justify-content-center text-center">
            <div>
                <p class="card-text">
                    <% if (typeof history !=='undefined' ) { %>
                        <% if (history.length > 1 ) { %>
                            <div class="overflow-auto mh-75">
                            <% for(var i=0; i < history.length; i++) {%>
                                <p><%- history[i] %></p>
                            <% } %>
                            </div>
                        <% } %>
                    <% } %>
            </div>
        </div>
    </div>

    <div class="options d-flex fixed-bottom flex-column pb-5 mb-4 align-items-center">
        <% if(combat.status) { %>
                <% if(combat.playerVictory) { %>
                    <p>You stand victorious.</p>
                    <form action='/combat/victory' method="post">
                        <button class="btn btn-secondary p-2 mb-2" style="width:25rem" type="submit">Continue</button>
                    </form>
                <% } else { %>
                    <p>Your vision begins to fade...</p>
                    <form action='/combat/defeat' method="post">
                        <button class="btn btn-secondary p-2 mb-2" style="width:25rem" type="submit">Continue</button>
                    </form>
                <% }%>
        <% } else if(typeof player !=='undefined' && typeof actor !=='undefined') {%>%>
            <p>It is now <%- actor.name %>'s turn.</p>
        <% if(player) { %>
        <% for(var x = 0; x < actor.actions.length; x++) { %>
            <form action='/combat/selectAction/<%- actor.name %>=<%- x %>' method="post">
                <button class="btn btn-secondary p-2 mb-2" style="width:25rem" type="submit"><%- actor.actions[x].name %></button>
            </form>
        <% } %>
        <% } else { %>
            <form action='/combat/generateAction/<%- actor.name %>' method="post">
                <button class="btn btn-secondary p-2 mb-2" style="width:25rem" type="submit">Continue</button>
            </form>
            <% } %>
        <% } %>
    </div>

    <footer class="d-flex fixed-bottom">
        <button class="btn btn-secondary w-100 p-3">Party</button>
        <button class="btn btn-secondary w-100 p-3">Inventory</button>
    </footer>
</body>

</html>