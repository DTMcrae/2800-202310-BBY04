<%- include("templates/combatHeader") %>

<body>
    <!-- Player Data -->
    <nav class="card partyDisplay">
        <div class="card-body d-flex" id="playerData">
            <p class="partyTitle">Party Members</p>
            <div class="d-flex overflow-hidden partyMembers">
                <div class="d-flex playerCard">
                    <img id="playerImage" class="d-flex mt-auto mb-auto rounded-circle playerImage"
                        src="/images/myD&D_Icon.png" width="75px" height="75px">
                    <ul class="d-flex list-unstyled mb-0 pl-2 playerDetails">
                        <li class="d-flex align-items-center">
                            <p class="card-title mb-0 playerName" id="playerName"><%- players[0].name %></p>
                        </li>
                        <li class="d-flex align-items-center">
                            <p class="card-text mb-0 playerHealth">HP:</p>
                            <p class="card-text pl-1"><%- players[0].hp %>/<%- players[0].maxHP %></p>
                        </li>
                    </ul>
                </div>
                <% for(var x=1; x < players.length; x++) { %>
                    <div class="d-flex playerCard secondaryCard">
                        <img class="d-flex mt-auto mb-auto rounded-circle playerImage" src="/images/myD&D_Icon.png"
                            width="75px" height="75px">
                        <ul class="d-flex list-unstyled mb-0 pl-2 playerDetails">
                            <li class="d-flex align-items-center">
                                <p class="card-title mb-0 playerName"><%- players[x].name %></p>
                            </li>
                            <li class="d-flex align-items-center">
                                <p class="card-text mb-0 playerHealth">HP:</p>
                                <p class="card-text pl-1"><%- players[x].hp %>/<%- players[x].maxHP %></p>
                            </li>
                        </ul>
                    </div>
                    <% } %>
            </div>
            <ul class="d-flex list-unstyled ml-auto">
                <li class="d-flex align-items-center ml-2 mt-auto">
                    <button id="home-button" class="btn btn-outline-light"><span
                            class="material-symbols-outlined">home</span></button>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card mt-3 d-flex ml-auto mr-auto transparent" id="combat-text" style="max-width: 100rem;">
        <div class="card-body d-flexbox justify-content-center text-center">
            <div>
                <h3 class="card-title" style="color:green">Victory!</h3>
                <% if (typeof summary !=='undefined' ) { %>
                    <p class="card-text"><%- summary %></p>
                    <%}%>
            </div>
        </div>
    </div>

<div class="options d-flex fixed-bottom flex-column pb-5 mb-4 align-items-center">
    <%if(typeof destination === 'undefined' || destination == 0) { %>
    <a href="/story/story-npcSC3" class="btn btn-secondary p-2 mb-2" style="width:25rem">Continue</a>
    <% } else if(destination == 2) {%>
    <a href="/LandingScreen" class="btn btn-secondary p-2 mb-2" style="width:25rem">Main Menu</a>
    <%} else {%>
    <a href="/story/story-boss3" class="btn btn-secondary p-2 mb-2" style="width:25rem">Continue</a>
    <% } %>
</div>

<%- include("templates/confirmationModal") %>

    <script>
        function setUpHome() {
            document.getElementById("home-button").addEventListener('click', () => {
                $("#confirmationModal").modal("show");
            });
        }
        setUpHome();
    </script>
                                        

<%- include("templates/combatBodyEnd") %>