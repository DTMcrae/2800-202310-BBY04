<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Equipped Items</title>

  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Include Your Custom CSS -->
  <link href="../../styles/style.css" rel="stylesheet">
</head>
<body class="frame">
  <div class="container" style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;">
      <h1>Player Details</h1>
    <div class="row">
      <% for (const character of items) { %>
        <div class="col-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= character.Name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= character.Class %></h6>
              <ul>
                <% for (let equipment in character.Equipment) { %>
                  <li><%= equipment %>: <%= character.Equipment[equipment] %></li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      <% } %>
    </div>
      <!-- Back Button -->
  <button onclick="goBack()" class="btn" style="background-color: black; color: white; border-color: white;">Go Back</button>
  </div>

  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function goBack() {
      window.history.back();
    }
  </script>
</body>
</html>
