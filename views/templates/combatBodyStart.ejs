<body>
    <!-- Player Data -->
    <nav class="card partyDisplay">
        <div class="card-body d-flex" id="playerData">
            <div class="d-flex flex-row overflow-hidden">
                <div class="d-flex playerCard">
                    <img id="playerImage" class="d-flex mt-auto mb-auto rounded-circle" src="/images/myD&D_Icon.png" width="75px" height="75px">
                    <ul class="d-flex list-unstyled flex-column mb-0 pl-2">
                        <li class="d-flex align-items-center">
                            <h5 class="card-title mb-0" id="playerName"><%- players[0].name %></h5>
                        </li>
                        <li class="d-flex align-items-center">
                            <p class="card-text mb-0">HP:</p>
                            <p class="card-text pl-1" id="playerHealth"><%- players[0].hp %>/<%- players[0].maxHP %></p>
                        </li>
                        <li class="d-flex align-items-center">
                            <p class="card-text mb-0">Gold:</p>
                            <p class="card-text pl-1" id="playerGold"><%- players[0].gold %></p>
                        </li>
                    </ul>
                </div>
                <% for(var x = 1; x < players.length; x++) { %>
                <div class="d-flex ml-5 playerCard">
                    <img id="playerImage" class="d-flex mt-auto mb-auto rounded-circle" src="/images/myD&D_Icon.png" width="75px" height="75px">
                    <ul class="d-flex list-unstyled flex-column mb-0 pl-2">
                        <li class="d-flex align-items-center">
                            <h5 class="card-title mb-0" id="playerName"><%- players[x].name %></h5>
                        </li>
                        <li class="d-flex align-items-center">
                            <p class="card-text mb-0">HP:</p>
                            <p class="card-text pl-1" id="playerHealth"><%- players[x].hp %>/<%- players[x].maxHP %></p>
                        </li>
                    </ul>
                </div>
                <% } %>
            </div>
            <ul class="d-flex list-unstyled ml-auto">
                <li class="d-flex align-items-center ml-5 mt-auto">
                    <a class="btn btn-outline-light" href="/LandingScreen"><span class="material-symbols-outlined">save</span></a>
                </li>
                <li class="d-flex align-items-center ml-2 mt-auto">
                    <a class="btn btn-outline-light" href="/LandingScreen"><span class="material-symbols-outlined">home</span></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="card mt-3 d-flex ml-auto mr-auto transparent" id="combat-text" style="max-width: 100rem;">
        <div class="card-body d-flexbox justify-content-center text-center">
            <div>
                <p class="card-text">
                    <% if (typeof history !=='undefined' ) { %>
                        <% if (history.length> 1 ) { %>
                            <div class="overflow-auto mh-75" id="combatHistory">
                                <% for(var i=0; i < history.length; i++) {%>
                                    <p><%- history[i] %></p>
                                    <% } %>
                            </div>
                            <% } %>
                                <% } %>
            </div>
        </div>
    </div>