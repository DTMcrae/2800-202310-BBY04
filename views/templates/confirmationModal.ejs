<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <% if(typeof title !=="undefined" ) { %>
                    <h5 class="modal-title" id="confirmationModalLongTitle"><%- title %></h5>
                <% } else {%>
                    <h5 class="modal-title" id="confirmationModalLongTitle">Do you wish to proceed?</h5>
                <% } %>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <% if(typeof message !=="undefined" ) {%>
                    <p><%- message %></p>
                    <% } else { %>
                    <p>Any unsaved progress will be lost.</p>
                    <% } %>
            </div>
            <div class="modal-footer">
                <% if(typeof destination !=="undefined" ) { %>
                    <a class="btn btn-secondary" href="<%- destination %>>">Yes</a>
                <% } else {%>
                    <a class="btn btn-secondary" href="/LandingScreen">Yes</a>
                <% } %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>